<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="80sp"
        android:singleLine="true"
        android:background="#3A4547"
 />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="70sp"
        android:singleLine="true"
        android:background="#3A4547"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height = "match_parent"
        >


        <LinearLayout
            android:layout_marginBottom="1pt"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <TextView
                android:id="@+id/btn_ac"
                style="@style/NumberButton"
                android:text="AC"
                android:textSize="30sp" />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_bracket_open"
                android:text="("
                android:textSize="30sp"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_bracket_close"
                android:text=")"
                android:textSize="30sp"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/division_btn"
                android:text="/"
                android:textSize="30sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="1pt"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="30sp"
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="30sp"
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="30sp"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/multiplication_btn"
                android:text="*"
                android:textSize="30sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/btn_4"
                style="@style/ActionButton"
                android:text="4"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/btn_5"
                style="@style/ActionButton"
                android:text="5"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/btn_6"
                style="@style/ActionButton"
                android:text="6"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/plus_btn"
                style="@style/NumberButton"
                android:text="+"
                android:textSize="30sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginBottom="1pt"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="30sp"
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="30sp"
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="30sp"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/minus_btn"
                android:text="-"
                android:textSize="30sp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_point"
                android:text="."
                android:textSize="30sp"
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="30sp"
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_back"
                android:text="BACK"
                android:textSize="30sp"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_equality"
                android:text="="
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>